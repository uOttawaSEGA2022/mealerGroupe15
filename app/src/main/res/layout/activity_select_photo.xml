<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cuisinierclasses.SelectPhotoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#BAFB8C00"
            app:columnCount="3"
            app:rowCount="2">


            <ImageView
                android:id="@+id/cafe"
                android:layout_width="119dp"
                android:layout_height="254dp"
                android:onClick="SetFoodIcon"
                android:src="@drawable/cafe"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_row="0"
                app:layout_rowSpan="1" />

            <ImageView
                android:id="@+id/cocahori"
                android:layout_width="133dp"
                android:layout_height="254dp"
                android:onClick="SetFoodIcon"
                android:src="@drawable/cocahori"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_row="0"
                app:layout_rowSpan="1" />

            <ImageView
                android:id="@+id/dejeuner"
                android:layout_width="148dp"
                android:layout_height="256dp"
                android:onClick="SetFoodIcon"
                android:src="@drawable/dejeuner"
                app:layout_column="2"
                app:layout_columnSpan="1"
                app:layout_row="0"
                app:layout_rowSpan="1" />

            <ImageView
                android:id="@+id/burgerhori"
                android:layout_width="118dp"
                android:layout_height="257dp"
                android:onClick="SetFoodIcon"
                android:src="@drawable/burgerhori"
                app:layout_column="0"
                app:layout_columnSpan="1"
                app:layout_row="1"
                app:layout_rowSpan="1" />

            <ImageView
                android:id="@+id/pizzahori"
                android:layout_width="138dp"
                android:layout_height="250dp"
                android:onClick="SetFoodIcon"
                android:src="@drawable/pizzahori"
                app:layout_column="1"
                app:layout_columnSpan="1"
                app:layout_row="1"
                app:layout_rowSpan="1" />

            <ImageView
                android:id="@+id/rizfrit"
                android:layout_width="149dp"
                android:layout_height="254dp"
                android:onClick="SetFoodIcon"
                android:src="@drawable/rizfrit"
                app:layout_column="2"
                app:layout_columnSpan="1"
                app:layout_row="1"
                app:layout_rowSpan="1" />
        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
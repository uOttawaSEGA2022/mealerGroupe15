<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clientclasses.RateDialogu">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="467dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="0dp"
        app:cardBackgroundColor="@color/Rate_dialogu"
        app:cardCornerRadius="25dp"
        app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="379dp"
                android:layout_height="368dp"
                android:background="@color/Rate_dialogu"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/textView49"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="8dp"
                    android:text="Comment Ã©tait votre repas?"
                    android:textSize="33dp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@android:style/Widget.Material.Light.RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="20dp"
                    android:clickable="true"

                    android:indeterminate="false"
                    android:numStars="5"
                    android:progressTint="#FB8C00"
                    android:rating="0"
                    android:stepSize="0.5" />

                <LinearLayout
                    android:layout_width="359dp"
                    android:layout_height="99dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textv"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginLeft="150dp"
                        android:text="NOTE:"

                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/Note"
                        android:layout_width="97dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text=""

                        android:textSize="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="133dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/ConfirmerRate"
                        android:layout_width="186dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="95dp"
                        android:layout_marginTop="10dp"

                        android:layout_marginRight="8dp"

                        android:background="#3C000000"
                        android:text="Continuer"

                        app:cornerRadius="40dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
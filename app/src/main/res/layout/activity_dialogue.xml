<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/customercomplaint"

    tools:context=".dialogue">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout


            android:layout_width="409dp"
            android:layout_height="113dp"
            android:layout_marginTop="14dp"
            android:orientation="vertical">

            <Button

                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="79dp"
                android:onClick="onReject"
                android:text="Rejeter la plainte"
                app:cornerRadius="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="113dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:onClick="onDefinitiveSusupension"
                android:text="Suspendre définitivement"
                app:cornerRadius="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="181dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:onClick="openDatePicker"
                android:text="Suspendre temporairement"
                app:cornerRadius="40dp" />

            <Button
                android:id="@+id/datePickerButton"
                style="?android:spinnerStyle"
                android:layout_width="wrap_content"
                android:layout_height="86dp"
                android:layout_marginLeft="195dp"

                android:text="Nov 11 2022"
                android:textColor="@color/black"

                android:textSize="30sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintLeft_toRightOf="parent" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="185dp"
            android:layout_marginTop="105dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="114dp"
                android:layout_height="77dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="85dp"
                android:foreground="@drawable/leftarrow"
                android:onClick="onListe"
                android:text="Retourner à la liste"

                app:cornerRadius="40dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
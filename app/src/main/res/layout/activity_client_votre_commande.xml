<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clientclasses.ClientVotreCommandeActivity"
    >

    <LinearLayout
        android:background="@drawable/backgroundk"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView20"
            style="@style/Theme.AppCompat.DayNight"
            android:layout_width="350dp"
            android:layout_height="129dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:text="Votre commande"
            android:textSize="40dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="252dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="115dp"
                android:layout_height="73dp"
                android:text="Statut:"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/StatutCommande"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:text="Votre commande est en preparation"
                android:textSize="30dp" />

        </LinearLayout>

        <Button
            android:id="@+id/GotoMap"

            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"




            android:layout_marginRight="20dp"
            android:background="#3C000000"
            android:drawableLeft="@android:drawable/ic_dialog_map"
            android:drawableTint="#3571B1"
            android:onClick="OnOpenInGoogleMaps"
            android:text="Voir l'addresse de recuperation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/confirmerRate"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="20dp"


                android:layout_marginRight="20dp"
                android:background="#3C000000"
                android:drawableLeft="@android:drawable/btn_star_big_on"
                android:onClick="onGotoDialogu"
                android:text="Evaluer votre repas" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/SoumettrePlainte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soumettre une plainte"
            android:onClick="onSoumettrePlainte"
            android:background="@color/purple_200"
            app:cornerRadius="40dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <Button
            android:id="@+id/BacktoMesRepas"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:background="@color/purple_200"
            android:onClick="OnBackToMesRepas"
            app:cornerRadius="40dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
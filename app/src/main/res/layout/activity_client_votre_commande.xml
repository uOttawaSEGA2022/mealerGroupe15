<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientVotreCommandeActivity"
    >

    <LinearLayout
        android:background="@drawable/backgroundk"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView20"
            style="@style/Theme.AppCompat.DayNight"
            android:layout_width="350dp"
            android:layout_height="129dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:text="Votre commande"
            android:textSize="40dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="252dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView31"
                android:layout_width="115dp"
                android:layout_height="73dp"
                android:text="Statut:"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/StatutCommande"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:text="Votre commande est en preparation"
                android:textSize="30dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView45"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Noter votre repas:"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="114dp"
            android:orientation="vertical">

            <RatingBar
                android:id="@+id/ratingBar"
                style="@android:style/Widget.Material.Light.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:clickable="true"

                android:indeterminate="false"
                android:numStars="5"
                android:progressTint="#FB8C00"
                android:rating="0"
                android:stepSize="1" />

            <TextView
                android:id="@+id/Note"
                android:layout_marginLeft="190dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp"
                />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/SoumettrePlainte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Soumettre une plainte"
            android:onClick="onSoumettrePlainte"
            app:cornerRadius="40dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <Button
            android:id="@+id/BacktoMesRepas"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:onClick="OnBackToMesRepas"
            app:cornerRadius="40dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
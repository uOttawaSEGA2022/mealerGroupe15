<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".clientclasses.MainActivityClient"
    android:background="@drawable/jus">

    <LinearLayout

        android:layout_width="413dp"
        android:layout_height="728dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333">

        <LinearLayout
            android:id="@+id/linea1"
            android:layout_width="match_parent"
            android:layout_height="267dp"
            android:layout_marginBottom="308dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="159dp"
                app:srcCompat="@drawable/logodemealerremove" />

            <TextView
                android:id="@+id/textVieww"

                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginLeft="10dp"


                android:text="Bienvenue, vous êtes connecté en tant qu' admin."
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="149dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/ToComplaints"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginLeft="10dp"

                android:background="@color/teal_700"

                android:text="Voir les plaintes"
                app:icon="@drawable/notification22"
                app:iconSize="55dp"
                app:iconTint="#F1EEEC"
                app:strokeColor="#C79D6F" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <ImageButton
                android:layout_marginLeft="10dp"
                android:id="@+id/buttonD"
                android:layout_width="92dp"


                android:layout_height="58dp"
                android:background="#D7BA7C36"
                android:foreground="@drawable/signoutoption"
                android:onClick="OnAdDeconnecter"
                android:text="Se déconnecter"
                android:textColor="@color/white"
                android:textColorLink="@color/white"
                app:cornerRadius="20dp"
                tools:ignore="TextContrastCheck" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="409dp"
                android:layout_height="729dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/inscriptitle"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/etes_vous"
                    android:textSize="40dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/cuisinier_sign"
                    android:layout_width="365dp"
                    android:layout_height="288dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/cuisinier"
                    android:clickable="true"
                    android:onClick="OnClickAsCuisinier" />

                <Button
                    android:id="@+id/Client_sign"
                    android:layout_width="365dp"
                    android:layout_height="288dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/client"
                    android:clickable="true"
                    android:onClick="OnClickAsClient" />

                <TextView
                    android:id="@+id/retour2"
                    android:layout_width="wrap_content"
                    android:layout_height="68dp"
                    android:layout_marginStart="20dp"
                    android:background="#0C8B9DAC"
                    android:clickable="true"
                    android:onClick="OnClickReturnMain"
                    android:text="⬅️Retour"
                    android:textAllCaps="true"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
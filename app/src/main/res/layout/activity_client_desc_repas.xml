<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundk">

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="728dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView53"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="REPAS"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="50sp"
            android:textStyle="bold|italic" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="482dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView54"
                    android:layout_width="243dp"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:text="Nom du repas  :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="XXXX"

                    android:textSize="25dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView56"
                    android:layout_width="163dp"
                    android:layout_height="63dp"
                    android:layout_weight="1"
                    android:text="Type de repas :"

                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView57"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="XXXX"
                    android:textSize="25dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView58"

                    android:layout_width="222dp"
                    android:layout_height="67dp"
                    android:layout_weight="1"
                    android:text="Type de cuisine :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView59"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="XXXX"
                    android:textSize="25dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView60"

                    android:layout_width="242dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:text="Ingrédients :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView61"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="XXXX"
                    android:textSize="25dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView62"

                    android:layout_width="wrap_content"
                    android:layout_height="64dp"
                    android:layout_weight="1"
                    android:text="Allergènes :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView63"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="XXXX"
                    android:textSize="25dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView64"

                    android:layout_width="179dp"
                    android:layout_height="59dp"
                    android:layout_marginRight="40dp"
                    android:layout_weight="1"
                    android:text="Prix :"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView65"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="XXXX"
                    android:textSize="25dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView66"

                    android:layout_width="222dp"
                    android:layout_height="71dp"
                    android:layout_weight="1"
                    android:text="Description : "
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView67"

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="XXXX"
                    android:textSize="25dp" />
            </TableRow>


        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:layout_marginLeft="115dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_minus"
                android:layout_width="50dp"
                android:layout_height="36dp"
                android:layout_marginTop="3dp"
                android:backgroundTint="#009A60CD"
                android:clickable="true"


                android:onClick="onclickMinus"
                android:src="@drawable/minus_botton" />

            <TextView
                android:id="@+id/Quantite"

                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="1dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <ImageButton
                android:id="@+id/btn_plus"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginTop="1dp"
                android:backgroundTint="#009A60CD"
                android:clickable="true"
                android:focusable="true"

                android:onClick="onclickPlus"
                android:src="@drawable/pluus" />
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="79dp">

            <Button
                android:id="@+id/button12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="OnBackToRepasDuJourClient"
                android:text="Back" />

            <Space
                android:layout_width="68dp"
                android:layout_height="37dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button13"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onCommander"
                android:text="Commander" />
        </TableRow>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


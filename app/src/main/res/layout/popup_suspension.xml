<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"

    android:layout_height="500dp"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="25dp"
    android:background="@drawable/redgrad">

    <TextView
        android:layout_width="357dp"
        android:layout_height="44dp"
        android:text="Traitement de la plainte"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRej"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="onListe"
        android:layout_marginBottom="376dp"
        android:src="@drawable/icon_close"
        app:layout_constraintBottom_toTopOf="@+id/datePickerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.411"
        tools:ignore="MissingConstraints" />

    <Button

        android:id="@+id/buttonRej"
        android:layout_width="354dp"
        android:layout_height="77dp"

        android:text="Rejeter la plainte"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.212" />

    <Button
        android:id="@+id/buttonSusDef"
        android:layout_width="347dp"
        android:layout_height="76dp"

        android:text="Suspendre dÃ©finitivement"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRej"
        app:layout_constraintVertical_bias="0.123" />

    <Button
        android:id="@+id/buttonSUSTemp"
        android:layout_width="357dp"
        android:layout_height="75dp"
        android:layout_marginBottom="92dp"
        android:onClick="openDatePicker"
        android:text="Suspendre temporairement"
        app:cornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSusDef"
        app:layout_constraintVertical_bias="0.95" />

    <Button
        android:id="@+id/datePickerButton"
        style="?android:spinnerStyle"
        android:layout_width="288dp"
        android:layout_height="71dp"

        android:layout_marginBottom="24dp"

        android:text="Nov 11 2022"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
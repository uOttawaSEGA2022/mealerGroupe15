<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cuisinierclasses.CuisinierVosDemandesActivity">

  <LinearLayout
      android:background="@drawable/backgroundk"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/textView14"
        style="@style/Theme.AppCompat.DayNight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"

        android:text="VOS DEMANDES"
        android:textAlignment="center"
        android:textSize="40dp"
        android:textStyle="bold"

        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/demandesRecyclerview"
        android:layout_width="match_parent"
        android:layout_height="497dp"
        android:background="@drawable/logodemealerremove">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/button7"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="150dp"
        android:onClick="OnBack"
        android:text="BACK"
        android:background="@color/purple_200"
        app:cornerRadius="40dp" />

  </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>